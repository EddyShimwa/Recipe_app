<div class="splash-page bg-gradient-to-r from-blue-600 to-green-500 flex flex-col items-center justify-center h-screen animate-fade-in">
  <h2 class="text-white font-bold text-4xl mb-4">Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "w-full max-w-sm" }) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 font-bold mb-2 text-white" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
    <div class="mb-4">
      <%= f.label :password, class: "block text-gray-700 font-bold mb-2 text-white" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="mb-4">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "text-white" %>
      </div>
    <% end %>
    <div class="flex items-center justify-between">
      <%= f.submit "Log in", class: "bg-yellow-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
<style>
  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  .animate-fade-in {
    animation: fade-in 0.5s ease-in-out;
  }
</style>